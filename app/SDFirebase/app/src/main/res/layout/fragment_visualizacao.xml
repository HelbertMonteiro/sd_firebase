<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentVisualizacao"
    android:background="#90AEB0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trabalho"
            android:textSize="25dp"
            android:padding="15px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="25px"
            android:layout_gravity="center"
            android:textColor="#EBF3F4"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Trabalho: "
            android:textSize="18dp"/>

            <EditText
                android:id="@+id/etNomeV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="textAutoCorrect|textAutoComplete|textCapWords|textCapSentences"
                android:background="#EBF3F4"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Autor: "
            android:textSize="18dp"/>

            <EditText
                android:id="@+id/etAutorV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="textAutoCorrect|textAutoComplete|textCapWords|textCapSentences"
                android:background="#EBF3F4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linguagem de Programação: "
            android:textSize="18dp"/>

            <EditText
                android:id="@+id/etLinguagemV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="textAutoCorrect|textAutoComplete|textCapWords|textCapSentences"
                android:background="#EBF3F4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço no GitHub: "
            android:textSize="18dp"/>

            <EditText
                android:id="@+id/etGitHubV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:background="#EBF3F4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Usuário: "
            android:textSize="18dp"/>

            <EditText
                android:id="@+id/etUsuarioV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:background="#EBF3F4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha: "
            android:textSize="18dp"/>
            <EditText
                android:id="@+id/etSenhaV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:enabled="false"
                android:background="#EBF3F4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom|end"
            android:layout_marginTop="50px">
            <ImageButton
                android:id="@+id/btCancelarV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/cancelar"
                android:padding="15px"
                android:layout_marginRight="30px"/>
            <ImageButton
                android:id="@+id/btEditTrabalhoV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15px"
                android:layout_marginRight="30px"
                android:background="@mipmap/edit_campo"/>
            <ImageButton
                android:id="@+id/btExcluirTrabalhoV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15px"
                android:layout_marginRight="30px"
                android:background="@mipmap/excluir_trabalho"/>
            <ImageButton
                android:id="@+id/btSalvarTrabalhoV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15px"
                android:background="@mipmap/salvar_trabalho"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>